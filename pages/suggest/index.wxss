/* pages/suggest/index.wxss */
.tabs {
    padding: 30rpx;
}
.tabs .tab-item {
    border: 1px solid #AB1D3B;
    font-size: 32rpx;
    color: #AB1D3B;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    display: inline-block;
    text-align: center;
    border-radius: 8rpx;
    margin-right: 20rpx;
}
.tab-item.active {
    background-color: #AB1D3B;
    color: #fff;
}
.type-wrapper, .content {
    padding: 30rpx;
}
.picker {
    color: #AB1D3B;
    font-size: 30rpx;
    padding-bottom: 27rpx;
    border-bottom: 1px solid #AB1D3B;
}
.picker.none {
    color: #CCC;
}
.textarea-placeholder {
    color: #999;
    font-size: 28rpx;
}
.textarea {
    min-height: 198rpx;
    background-color: #FEF7F9;
    border-radius: 8rpx;
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}
.form {
    padding: 0 30rpx 30rpx;
}
.cell-title {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-top: 30rpx;
}
.control {
    margin-top: 30rpx;
}
.lable {
    color: #ccc;
    font-size: 24rpx;
    margin-bottom: 17rpx;
}
.value {
    padding: 12rpx 0;
    color: #AB1D3B;
    font-size: 30rpx;
    border-bottom: 1px solid #AB1D3B;
}
.btn-submit {
    background-color: #AB1D3B;
    color: #fff;
    line-height: 90rpx;
    text-align: center;
    margin-top: 100rpx;
    border-radius: 8rpx;
}

.upload-wrapper image.preview {
    width: 100%;
    height: 100%;
    border-radius: 5rpx;
}

.upload-wrapper > view {
    position: relative;
    display: inline-block;
    vertical-align: text-top;
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.upload-wrapper image.del {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 5rpx;
    top: 5rpx;
}
.down-icon {
    width: 40rpx;
    height: 40rpx;
    float: right;
    margin-top: -30px;
}