/* pages/discount/index.wxss */
.list {
    font-size: 0;
    padding: 30rpx 15rpx;
}
.item {
    display: inline-block;
    width: 50%;
    box-sizing: border-box;
    padding: 0 15rpx;
    position: relative;
}
.item > image {
    width: 100%;
}
.box {
    position: absolute;
    width: calc(100% - 30rpx);
    height: 100%;
    top: 0;
    left: 15rpx;
    box-sizing: border-box;
    padding: 30rpx;
    overflow: hidden;
}
.content {
    width: 100%;
    height: 100%;
    text-align: center;
    border: 1px solid #CFA972;
    border-radius: 8rpx;
    background-color: rgba(250,246,240,0.5);
    display: flex;
    display: -webkit-flex;
    justify-content: space-around;
    -webkit-justify-content: space-around;
    flex-direction: column;
    -webkit-flex-direction: column;
    padding: 15rpx 10rpx;
    box-sizing: border-box;
}
.name {
    font-size: 28rpx;
    color: #FF4F24;
}
.discount {
    font-size: 32rpx;
    color: #C2000C;
}
.end_time {
    font-size: 24rpx;
    color: #FF8E66;
}
.confirm {
    width: 70%;
    height: 20%;
    border-radius: 8rpx;
    background:linear-gradient(90deg,rgba(194,0,12,1) 0%,rgba(162,44,51,1) 100%);
    font-size: 30rpx;
    color: #fff;
    margin: 0 auto;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    -webkit-justify-content: center;
    flex-direction: column;
    -webkit-flex-direction: column;
}
.station {
    position: absolute;
    left: 0;
    top: 43rpx;
    width: 132rpx;
    text-align: center;
    font-size: 20rpx;
    line-height: 50rpx;
    color: #fff;
    background:linear-gradient(0deg,rgba(194,0,12,1) 0%,rgba(255,144,104,1) 100%);
    transform: rotate(-45deg);
    transform-origin: left bottom;
}
.no-data {
    font-size: 28rpx;
    text-align: center;
    padding: 60rpx 0;
    color: #999;
}