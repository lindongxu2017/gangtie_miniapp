/* pages/sign/luck_draw.wxss */
.cell-title {
    font-size: 74rpx;
    text-align: center;
    text-shadow:0px 5px 8px rgba(125,21,43,0.27);
    background:linear-gradient(0deg,rgba(204,48,81,1) 0%, rgba(182,36,66,1) 100%);
    -webkit-text-fill-color:transparent;
    background-clip:text;
    -webkit-background-clip:text;
    padding: 57rpx 0 50rpx;
}
.luck {
    margin: 0 60rpx;
    position: relative;
}
.luck-bg {
    width: 100%;
    display: block;
}
.luck .content {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    padding: 4% 5%;
    box-sizing: border-box;
}
.items {
    width: 33.33333%;
    height: 33.33333%;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    -webkit-flex-direction: column;
    float: left;
    align-items: center;
    -webkit-align-items: center;
    justify-content: center;
    -webkit-justify-content: center;
}
.items .icon {
    width: 40%;
    height: 40%;
    display: block;
    margin: -20rpx auto 10rpx;
}
.items .score {
    font-size: 28rpx;
    color: #5F3A17;
}
.items .text {
    font-size: 52rpx;
    color: #ECC292;
    font-weight: bold;
    margin: -30rpx auto 5rpx;
}
.items .consume {
    font-size: 24rpx;
    color: #ECC292;
}
.high-move {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    padding: 4% 5%;
    box-sizing: border-box;
}
.box {
    position: relative;
    width: 100%;
    height: 100%;
}
.move-block {
    position: absolute;
    width: 33.3333333%;
    height: 33.3333333%;
    background-color: rgba(182,36,66,0.45);
    border-radius: 8rpx;
}
.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.7);
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    -webkit-flex-direction: column;
    align-items: center;
    -webkit-align-items: center;
    justify-content: center;
    -webkit-justify-content: center;
    box-sizing: border-box;
    padding: 0 17%;
}
.popup {
    width: 100%;
    position: relative;
}
.luck-img {
    width: 100%;
    display: block;
}
.popup-luck-box {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    text-align: center;
}
.luck-text {
    margin-top: 28%;
    color: #B71413;
    font-size: 28rpx;
    margin-bottom: 12%;
}
.luck-name, .luck-phone {
    width: 48%;
    height: 60rpx;
    margin-left: 35%;
    margin-bottom: 6%;
    text-align: left;
}
.luck-phone {
    margin-bottom: 12%;
}
.luck-confirm {
    width: 67%;
    height: 12%;
    margin: 0 auto;
    margin-bottom: 32.5%;
}
.luck-close {
    width: 20%;
    height: 12%;
    margin: 0 auto;
}
.list-cell-title {
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
    padding: 78rpx 50rpx 6rpx;
}
.list {
    padding: 0 50rpx 30rpx;
}
.tr {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    align-items: center;
    -webkit-align-items: center;
    padding: 44rpx 0 30rpx;
    border-bottom: 1px solid #ccc;
}
.th {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}
.td {
    font-size: 28rpx;
    color: #666;
}
.td.prize {
    color: #7B0910;
}