page{
	background: #f4f4f4;
}
swiper{
	height:450rpx;
}
swiper swiper-item image{
	width:100%;
	height:100%;
}
.content{
  padding:0 30rpx;
  background: white;
  line-height: 1;
}
.header {
	margin-bottom:30rpx;
}
.header .title{
	font-size:36rpx;
	font-family:PingFang-SC-Medium;
	color:rgba(51,51,51,1);
	padding:30rpx 0 30rpx;
}
.header .location-box{
	display: flex;
	padding-bottom: 20rpx;
	font-size:28rpx;
	line-height:32rpx;
	color:#979797;
  	position: relative;
	align-items: center;
}
.header .location-box .location{
  margin-left:15rpx;
  flex:1;
}
.header .location-box image{
  width:30rpx;
  height:30rpx;
  min-width: 30rpx;
  vertical-align: middle;
}
.header .border{
	display: flex;
	align-items: center;
	color:#979797;
	line-height: 40rpx;
	font-size:30rpx;
	padding-bottom: 20rpx;
}
.header .border image{
	width:26rpx;
	height: 26rpx;
	vertical-align: middle;
	margin-right:14rpx;
}
.publicTitle .title{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:32rpx;
  line-height: 1;
  padding: 24rpx 0 23rpx;
  border-bottom:1rpx solid #eee;
}
.publicTitle .title image{
  width:30rpx;
  height:30rpx;
  vertical-align: middle;
  margin:0 13rpx;
}

.sec-flex-box{
	padding:26rpx 0;
}
.sec-flex{
  display: flex;
  line-height: 1;
  font-size:28rpx;
  color:#212121;
  align-items: center;
  margin-top:28rpx;
}
.sec-flex:first-child{
	margin-top:0;
}
.sec-flex image{
  width:30rpx;
  height: 30rpx;
  margin-right:17rpx;
  vertical-align: middle;
}
.introduce{
	background: #fff;
}
.introduce{
  margin-top: 30rpx;
}
.introduce .textarea{
  font-size: 28rpx;
  color:#979797;
  line-height: 48rpx;
  padding:14rpx 0;
}
.introduce .bg-image{
  background: no-repeat center/cover;
  width:100%;
  height:312rpx;
  margin-bottom:24rpx;
}