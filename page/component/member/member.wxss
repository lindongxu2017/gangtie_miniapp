.bg{
	position:fixed;
	display:block;
	top:0;
	left:0;
	width:100%;
	height:100%;
}
.qrcode_box{
	text-align:center;
	font-size:30rpx;
	line-height:50rpx;
	color:#333;
	position:fixed;
	left:80rpx;
	right:80rpx;
	top:50%;
	transform:translateY(-60%);
	z-index:1;
}
.qrcode{
	width:400rpx;
	height:400rpx;
	margin:0 auto 30rpx;
	display:block;
}