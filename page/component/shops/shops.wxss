swiper image{
	width:100%;
	height:100%;
}
.position{
  width: 100%;
  top:0;
  background: #f4f4f4;
}
.type-flex{
  padding:40rpx 0 36rpx;
  display:flex;                         
  justify-content:space-around;
  background: white;
}
.type-flex navigator{
	text-align: center;
	font-size:28rpx;
	color:#212121;
}
.type-flex navigator image{
  	width:100rpx;
  	height:100rpx;
	display: block;
	margin:0 auto 20rpx;
}
.hint{
	line-height:60rpx;
	font-size:24rpx;
	color:#999;
	height:60rpx;
	text-align: center;
}
.nav{
	color:#333;
	line-height: 1;
	display: flex;
	justify-content: center;
	font-size:30rpx;
	background: white;
	padding: 25rpx 0;
}
.nav .item{
	position: relative;
	width:30%;
	margin:0 30rpx;
	text-align: center;
 	padding:20rpx 0;
	 background-color: #e8e8e8;
}
