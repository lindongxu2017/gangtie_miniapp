.nav image{
	width:16rpx;
	height:16rpx;
	margin-top: -2rpx;
	vertical-align: middle;
	margin-left: 10rpx;
}
.sec-box{
	background: white;
	padding: 0 30rpx;
}
.sec{
	padding: 34rpx 0;
	display:flex;
	border-bottom:1rpx solid #eee;
	align-items: center;
	line-height: 1;
}
.sec:last-child{
  border:none;
}
.sec .head-img{
	min-width:190rpx;
	width:190rpx;
	height:190rpx;
	margin-right:26rpx;
}
.sec .head-img image{
	width:100%;
	height: 100%;
}
.detail{
	flex:1;
}
.detail .title-box{
	display:flex;
	font-size:34rpx;
	margin-bottom:9rpx;
	align-items: center;
	justify-content: space-between;
}
.detail .title-box .title{
	line-height:50rpx;
	word-break: break-all;
	margin-right: 30rpx;
}
.detail .title-box .distance{
	font-size:24rpx;
	color:#B1B1B1;
}
.detail .content{
	font-size:26rpx;
	line-height: 40rpx;
	color:#B1B1B1;
	overflow:hidden; 
	height: 80rpx;
}
.detail .activity{
	height:34rpx;
	padding:5rpx 0;
	margin-top:11rpx;
	display:flex;
}
.detail .activity view{
	font-size:22rpx;
	border-radius:8rpx;
	margin-right:15rpx;
	line-height: 32rpx;
	height:32rpx;
	padding: 0 12rpx;
}
.detail .activity view.favorable{
	color:#FEB609;
	border:1px solid #FEB609;
}
.detail .activity view.new{
	color:#6389BE;
	border:1px solid #6389BE;
}