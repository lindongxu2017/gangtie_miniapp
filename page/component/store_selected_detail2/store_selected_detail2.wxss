page{
	width:100%;
	height:100%;
	position:fixed;
	top:0;
	left:0;
}
.songhui_item_bg{
	position:absolute;
	top:0;
	bottom:0;
	left:0;
	right:0;
}
.songhui_item_bg image{
	width:100%;
	height:100%;
	display:block;
}
.songhui_item_content{
	position:absolute;
	background:white;
	border-radius:10rpx;
	top:30rpx;
	bottom:40rpx;
	left:30rpx;
	right:30rpx;
}
.songhui_item_content_box{
	position:absolute;
	top:398rpx;
	bottom:30rpx;
	left:0;
	right:0;
}
.songhui_item_content_box .title_box{
	font-size:32rpx;
	line-height:48rpx;
	color:#212121;
	margin-bottom:22rpx;
	font-weight:550;
	display: flex;
	justify-content:center;
	align-items:center;
}
.songhui_item_content_box .title_box image{
	width:22rpx;
	height: 22rpx;
	vertical-align:middle;
}
.songhui_item_content_box .title_box .title{
	margin:0 15rpx;
}
.wxParse{
	width:100%;
	padding:0;
}
.songhui_item_pd{
	height:12rpx;
	font-size:0;
}
.songhui_item_content_top .info_box{
	height:138rpx;
	padding:30rpx;
	display:flex;
}
.info_box_img{
	width:138rpx;
	min-width:138rpx;
	height:138rpx;
	position: relative;
	margin-right:30rpx;
}
.info_box_img_box{
	position:absolute;
	top:0;
	left:0;
	display:block;
	width:100%;
	height:100%;
}
.info_box_img_img{
	width:138rpx;
	height:138rpx;
	display:block;
	position:absolute;
	top:0;
	left:0;
	box-sizing:border-box;
}
.info_box .title{
	color:#212121;
	font-size:34rpx;
	margin-bottom:10rpx;
}
.info_box .explain{
	color:#B1B1B1;
	font-size:28rpx;
	line-height:40rpx;
}
.songhui_item_pd image{
	width:100%;
	height:100%;
}
.info_list{
	padding:15rpx 30rpx;
	border-top:1px solid #eee;
	box-sizing:border-box;
}
.info_item{
	padding:15rpx 0;
	line-height:34rpx;
	height:34rpx;
	align-items:center;
	display:flex;
	color:#0F0F0F;
	font-size:28rpx;
}
.info_item image{
	width:34rpx;
	height:34rpx;
	display:block;
	margin-right:15rpx;
	min-width:34rpx;
}
.fwb{
	position:absolute;
	top:70rpx;
	bottom:0;
	left:0;
	right:0;
}
.fwb scroll-view{
	height:100%;
}
.wxParse{
	padding:0 30rpx;
	box-sizing:border-box;
}