/* 客服电话 */
.kufuHead{
	height:164rpx;
	background-color: #AF1A3A;
	position: relative;	
}
.kufuHead:before{
	width:0;
	height: 70rpx;
	position: absolute;
	content: "";
	left:50%;
	border-right:2rpx dashed #D2D2D2;
	bottom: -160rpx;
	margin-left: -1rpx;
}
.kufuHead .logo-box{
	position: absolute;
	width:110rpx;
	height: 110rpx;
	background-color: white;
	bottom:-50rpx;
	margin-left:-50rpx;
	left:50%;
	box-shadow:0px 2px 6px rgba(175,26,58,0.49);
	border-radius:8rpx;
}
.kufuHead .logo-box image{
	width:100rpx;
	height: 100rpx;
	margin:5rpx;
}
.phone-box{
	position: relative;
	width:540rpx;
	height: 106rpx;
	line-height: 53rpx;
	font-size:30rpx;
	color:#212121;
	padding: 35rpx 85rpx;
	margin:200rpx auto 140rpx;
	background-color: white;
	border-radius: 88rpx;
	box-shadow: 0 2rpx 12rpx rgba(210, 210, 210, 0.5);
}
.phone-box:before{
	width:0;
	height: 70rpx;
	position: absolute;
	content: "";
	left:50%;
	border-right:2rpx dashed #D2D2D2;
	bottom: -110rpx;
	margin-left: -1rpx;
}
.phone-btn{
	width:108rpx;
	height:108rpx;
	border-radius: 50%;
	margin:0 auto;
	border:1rpx solid #AF1A3A;
	background:white;
	box-shadow:0 2rpx 8rpx rgba(175,26,58,0.38);
}
.phone-btn image{
	width:50rpx;
	height:50rpx;
	margin:29rpx;
}
