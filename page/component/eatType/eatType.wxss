.fixed{
  position: fixed;
  top:0;
  background: white;
  width: 100%;
  padding-bottom: 10px;
}
.search{
	height: 32px;
	margin:10px 30rpx 0;
	width:calc(100% - 60rpx);
	border-radius: 10rpx;
	background:#f5f5f5;
	display: flex;
	align-items: center;
}
.search image{
	width:30rpx;
	height: 30rpx;
	margin:0 15rpx 0 20rpx;
}
.search input{
	flex:1;
	padding-right:15rpx;
	height: 32px;
	line-height: 32px;
	color:#212121;
	font-size:26rpx;
}
.nav-box{
	background: white;
}
.nav1{
	line-height: 1;
	font-size:15px;
	padding: 20px 30rpx 0;
	display:flex;
}
.nav1 .list{
  margin-right:55rpx;
	padding-bottom:11px;
}
.nav1 .list.active{
  color:#AF1A3A;
  position: relative
}
.nav1 .list.active::after{
  content: "";
  width:30rpx;
  height:2px;
  border-radius: 1px;
  position: absolute;
  left:calc(50% - 15rpx);
  bottom:0rpx;
  background: #AF1A3A; 
}

.nav2{
	height: 27px;
	line-height: 27px;
	font-size:24rpx;
	color:#949494;
	padding: 20px 30rpx 3px;
	display: flex;
}
.nav2 .list{
  margin-right:30rpx;
  padding: 0 23rpx;
  background: #f4f4f4;
  color:#949494;
  border-radius: 5rpx;
}
.nav2 .list.active{
  background: orange;
  color:white;
}
.relative{
  padding-top: 148px;
  background: #f4f4f4;
}
.sec-box{
	background: white;
	padding:0 30rpx;
}
.sec{
	padding: 34rpx 0;
	display:flex;
	align-items: center;
	border-bottom:1rpx solid #eee;
}
.sec:last-child{
  border:none;
}
.sec .head-img{
	min-width:190rpx;
	width:190rpx;
	height:190rpx;
	margin-right:26rpx;
}
.sec .head-img image{
	width:100%;
	height: 100%;
}
.detail{
	flex:1;
}
.detail .title-box{
	display:flex;
	font-size:34rpx;
	margin-bottom:9rpx;
	align-items: center;
	justify-content: space-between;
}
.detail .title-box .title{
	line-height:50rpx;
	word-break: break-all;
	margin-right: 30rpx;
}
.detail .title-box .distance{
	font-size:24rpx;
	color:#B1B1B1;
}
.detail .content{
	font-size:26rpx;
	line-height: 40rpx;
	height: 80rpx;
	word-break: break-all;
	color:#B1B1B1;
}
.detail .activity{
	height:34rpx;
	padding:5rpx 0;
	margin-top:11rpx;
	display:flex;
}
.detail .activity view{
	font-size:22rpx;
	border-radius:8rpx;
	margin-right:15rpx;
	line-height: 32rpx;
	height:32rpx;
	padding: 0 12rpx;
}
.detail .activity view.favorable{
	color:#FEB609;
	border:1px solid #FEB609;
}
.detail .activity view.new{
	color:#6389BE;
	border:1px solid #6389BE;
}