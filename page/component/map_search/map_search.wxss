page{
	width:100%;
	height:100%;
	position:fixed;
	top:0;
	left:0;
}
.search_box{
	padding:20rpx;
	height:80rpx;
	background-color:white;
	font-size:30rpx;
	position:relative;
}
.search_box image{
	position:absolute;
	left:42rpx;
	top:40rpx;
	width:40rpx;
	height:40rpx;
}
.search_box input{
	width:100%;
	height:100%;
	background-color:#f5f5f5;
	padding:0 80rpx;
	box-sizing:border-box;
	border-radius:10rpx;
}
.search_box .search_del{
	right:42rpx;
	left:auto;
}
.pd{
	height:20rpx;
	background-color:#f5f5f5;
}
.list{
	position:absolute;
	top:140rpx;
	bottom:0;
	left:0;
	right:0;
}
.list .item{
	padding:20rpx 30rpx;
	border-bottom:1rpx solid #eee;
	font-size:24rpx;
	line-height:40rpx;
	color:#777;
}
.list .item:last-child{
	border-bottom:none;
}
.list .item .title{
	color:#333;
	font-size:32rpx;
	line-height:50rpx;
}