page{width:100%;position: fixed;top:0;bottom:0;}
.select_site{display:flex;}
.search{height:40px;}
.search image.search_img{position:absolute;width:20px;height:20px;top:11px;left:10px;}
.search image.close_img{position:absolute;width:20px;height:20px;top:10px;right:10px;}
.search input{border-bottom:1px solid #eee;box-sizing:border-box;height:40px;padding:0 40px;font-size:34rpx;}
.search_list{width:80%;position:absolute;top:40px;left:30px;z-index:100;display:none;overflow-y:scroll;}
.black_screen{width:100%;position:absolute;top:40px;z-index:99;display:none;background:rgba(0, 0, 0, .5);bottom:0;}
.search_item{line-height:66rpx;height:66rpx;padding-left:20rpx;border:1px solid #eee;border-top:none;background-color:white;font-size:34rpx;display: flex;align-items:center;}
.search_item .line{margin-left:10rpx;height:34rpx;line-height:34rpx;padding:0 6rpx;font-size:20rpx;color:white;}
.line_list{flex:2;box-sizing:border-box;overflow-y:scroll;}
.line_item{background-color:#f5f5f5;height:80rpx;padding-left:54rpx;line-height:80rpx;border-bottom:1px solid #eee;font-size:26rpx;position:relative;border-left:6rpx solid transparent;}
.line_item.active{background-color:white;}
.line_item .color{width:12rpx;height:12rpx;border-radius:50%;position:absolute;top:0;bottom:0;margin:auto 0;left:32rpx;}
.site_list{flex:3;border-left:1px solid #eee;box-sizing:border-box;overflow-y:scroll;}
.site_item{height:72rpx;padding-left:30rpx;line-height:72rpx;border-bottom:1px solid #eee;font-size:30rpx;}