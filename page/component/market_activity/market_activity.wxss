page{
	position:fixed;
	top:0;
	left:0;
	width:100%;
	height:100%;
}
.songhui_item_bg{
	position:absolute;
	top:0;
	bottom:0;
	left:0;
	right:0;
}
.songhui_item_bg image{
	width:100%;
	height:100%;
	display:block;
}
.songhui_item_content{
	position:absolute;
	border-radius:10rpx;
	top:0;
	bottom:40rpx;
	left:0;
	right:0;
}
.songhui_item_content_bottom{
	position:absolute;
	top:0;
	bottom:0;
	left:0;
	right:0;
}
.store_list{
	height:100%;
}
.store_item{
	margin:0 30rpx;
	padding:30rpx;
	padding-top:23rpx;
	border-radius:10rpx;
	margin-bottom:30rpx;
	background-color:white;
}
.store_item:last-child{
	margin-bottom: 0;
}
.store_item.padding_bottom{
	padding-bottom:15rpx;
}
.store_item .title{
	font-size:34rpx;
	line-height:48rpx;
	color:#333;
	margin-bottom:7rpx;
}
.store_item .explain{
	color:#9C9C9C;
	font-size:28rpx;
	line-height:40rpx;
}
.store_item .explain.flex_1{
	flex:1;
}
.store_item .explain.margin_bottom{
	margin-bottom:14rpx;
}
.content.flex{
	display:flex;
}
.img{
	width:200rpx;
	height:130rpx;
	margin-left:30rpx;
	min-width:200rpx;
}
.img image{
	width:100%;
	height:100%;
	display:block;
}
.img_arr{
	display:flex;
	flex-wrap:wrap;
}
.img_arr image{
	width:200rpx;
	height:130rpx;
	margin-right:15rpx;
	display:block;
	min-width:200rpx;
	margin-bottom:15rpx;
}
.img_arr image:nth-child(3n){
	margin-right:0;
}
.empty{
	position:relative;
	top:45%;
	transform:translateY(-50%);
	text-align:center;
	font-size:32rpx;
	font-weight:500;
	color:#8A96A3;
}
.empty image{
	width:300rpx;
}
.empty .txt{
	margin-top:10rpx;
}
.swiper {
    margin-bottom: 30rpx;
}
.swiper-img {
    width: 100%;
}