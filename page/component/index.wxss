/**主页**/
.muser{
	padding-top: 100rpx;
  	height:400rpx;
  	background: url(https://gangtie.qinhantangtop.com/public/images/main.png) no-repeat bottom center/cover;
	/* background: #AF1A3A; */
	position: relative;
	margin-bottom:30rpx;
}
.weather{
	text-align: center;
	font-size:28rpx;
	color:white;
	line-height: 1;
	top:30rpx;
	position: absolute;
	right:54rpx;
	font-family:PingFang-SC-Medium;
}
.weather .txt{
	margin-top:20rpx;
}
.slogan{ 
	margin:auto;
	width: 130rpx;
	height: 130rpx;
	border-radius:65rpx;
  overflow: hidden;
}
.slogan image {
	width:130rpx;
	height:130rpx;
}
.name{
	padding-top:20rpx;
	text-align:center;
	color:#fff;
	font-size:28rpx;
	line-height:30rpx;
	font-family:PingFang-SC-Medium;
}
.hint{
	position:absolute;
	bottom:74rpx;
	width:100%;
}
.hint .text{
	color:#fff;
	font-size:26rpx;
	display:flex;
	align-items:center;
	justify-content:center;
	line-height:40rpx;
	font-family:PingFang-SC-Regular;
}
.hint .text image{
	width:50rpx;
	height:50rpx;
	vertical-align: middle;
	margin-right:9rpx;
	margin-top:-2rpx;
}
.notice-play{
	width:500rpx;
  height:40rpx;
	overflow:hidden;
}
#notice-box{
  position:relative;
  height:40rpx;
}
#notice{
  position:absolute;
  display: flex;
  height:40rpx;
  white-space:nowrap;
}
#notice.noticeAnimation{
  animation-name:notice;
  animation-timing-function:linear;
  animation-iteration-count:infinite;
}
@keyframes notice{
  from{left:0;}
  to{left:-50%;}
}
#notice .notice-li{
  margin-right:240rpx;
  min-width:260rpx;
}
#notice .notice-li .notice-text{
  margin-right:120px;
}
#notice .notice-li .notice-text:last-child{
  margin-right:0;
}
.micon-flex{
    display:flex;
	flex-wrap:wrap;
	font-family:PingFang-SC-Regular;
}
.micon-flex .list{
	width: 25%;
	text-align: center;
	margin:30rpx 0 35rpx;
	position: relative;
}
.micon-flex .list image{
  	width:90rpx;
  	height:90rpx;
	margin:0 auto;
	display: block;
}
.micon-flex .list text{
	line-height:1;
	font-size:22rpx;
	color:#1D1D1D;
}
.micon-flex .list button{
    height: 100%;
	width: 100%;
	position:absolute;
	right:0;
	top:0;
	opacity:0;
}
.tabbar{
	height: 98rpx;
	position: fixed;
	bottom:0;
	width:100%;
	display: flex;
	align-items: center;
	border-top:2rpx solid #e5e5e5;
}
.tabbar .item{
	width:calc(100% / 3);
	text-align: center;
}
.tabbar .item image{
	width:56rpx;
	height: 56rpx;
	margin:0 auto;
	display: block;
}
.tabbar .item .txt{
	color:#C1C1C1;
	font-size:20rpx;
}
.tabbar .item.active .txt{
	color:#AF1A3A;
}
.sign-text {
    text-align: center;
}
.sign-text button {
    display: inline-block;
    font-size: 28rpx;
    color: #FBAE0A;
    background-color: transparent;
    box-shadow: none;
}
.sign-text button::before, .sign-text button::after {
    display: none;
}