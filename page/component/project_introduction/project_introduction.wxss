page{
	position:fixed;
	top:0;
	left:0;
	width:100%;
	height:100%;
}
.songhui_item_bg{
	position:absolute;
	top:0;
	bottom:0;
	left:0;
	right:0;
}
.songhui_item_bg image{
	width:100%;
	height:100%;
	display:block;
}
.songhui_item_content{
	position:absolute;
	background:white;
	border-radius:10rpx;
	top:30rpx;
	bottom:40rpx;
	left:30rpx;
	right:30rpx;
}
.songhui_item_content_box{
	position:absolute;
	top:30rpx;
	bottom:30rpx;
	left:0;
	right:0;
	overflow:auto;
}
.wxParse{
	width:100%;
	padding:0 30rpx;
	box-sizing:border-box;
}