page{
	width:100%;
	height:100%;
	position:fixed;
	top:0;
	left:0;
}
.songhui_item_bg{
	position:absolute;
	top:0;
	bottom:0;
	left:0;
	right:0;
}
.songhui_item_bg image{
	width:100%;
	height:100%;
	display:block;
}
.songhui_item_content{
	position:absolute;
	top:30rpx;
	bottom:40rpx;
	left:30rpx;
	right:30rpx;
}
scroll-view{
	height:100%;
	border-radius:10rpx;
	background:white;
}
.store_list{
	padding:20rpx 30rpx 10rpx;
}
.store_item{
	display:flex;
	align-items:center;
	padding:30rpx 0;
	border-bottom:1px solid #e5e5e5;
}
.store_item:first-child{
	padding-top:10rpx;
}
.store_item:last-child{
	border-bottom:none;
}
.store_item .item_img{
	width:138rpx;
	height:138rpx;
	margin-right:30rpx;
	position:relative;
	min-width: 138rpx;
}
.store_item .item_img .box{
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	display:block;
}
.store_item .item_img .img{
	width:138rpx;
	height:138rpx;
	position:absolute;
	left:0;
	top:0;
	display:block;
	box-sizing:border-box;
}
.store_item .title{
	color:#333;
	font-size:30rpx;
	font-weight:550;
	margin-bottom:13rpx;
	line-height:1;
}
.store_item .explain{
	color:#9C9C9C;
	font-size:28rpx;
	line-height:40rpx;
}