/* template/store_item/index.wxss */
.content {
    box-shadow:0px 0px 29px 1px rgba(0, 0, 0, 0.05);
}
.info {
    padding: 20rpx 12rpx;
}
.img-wrapper {
    padding-bottom: 69.11%;
    position: relative;
}
.img-wrapper .img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.title {
    color: #333;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}
.items {
    font-size: 24rpx;
    color: #ccc;
    display: flex;
    margin-bottom: 10rpx
}
.items .lable, .items .value {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}